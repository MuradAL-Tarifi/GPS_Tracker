{
    <!-- vue select -->
    <link href="@Url.Content("~/lib/vue-select/vue-select.css")" rel="stylesheet" />
    <!-- Alertify -->
    <link href="@Url.Content("~/lib/alertify/alertify.css")" rel="stylesheet" />
